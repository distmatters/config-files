conky.config = {
    alignment = 'top_right',
    background = false,
    border_width = 1,
    cpu_avg_samples = 2,
	default_color = 'white',
    default_outline_color = 'white',
    default_shade_color = 'white',
    draw_borders = false,
    draw_graph_borders = true,
    draw_outline = false,
    draw_shades = false,
    use_xft = true,
    font = 'DejaVu Sans Mono:size=12',
    gap_x = 5,
    gap_y = 10,
    minimum_height = 5,
	minimum_width = 390,
    maximum_width = 390,
    net_avg_samples = 2,
    no_buffers = true,
    double_buffer = true,
    out_to_console = false,
    out_to_stderr = false,
    extra_newline = false,
    own_window = true,
    own_window_class = 'Conky',
    own_window_transparent = true,
    own_window_argb_visual = true,
    own_window_type = 'override',
    stippled_borders = 0,
    update_interval = 1.0,
    uppercase = false,
    use_spacer = 'none',
    show_graph_scale = false,
    show_graph_range = false
}


conky.text = [[
${color #4e7aa7}${time %k:%M - %a %b %d, %Y}
${color white}$hr
${color white}System:
${color #4e7aa7}Uptime:${color #DCDCDC} $uptime
${color #4e7aa7}Battery:${color #DCDCDC} ${battery_percent}% - ${battery_bar}
${color #4e7aa7}Frequency (in MHz):${color #DCDCDC} $freq
${color #4e7aa7}RAM Usage:${color #DCDCDC} $mem/$memmax - $memperc% ${membar 4}
${color #4e7aa7}Swap Usage:${color #DCDCDC} $swap/$swapmax - $swapperc% ${swapbar 4}
${color #4e7aa7}CPU Usage:${color #DCDCDC} $cpu% ${cpubar 4}
${cpubar cpu1 4,90} ${cpubar cpu1 4,90} ${cpubar cpu3 4,90} ${cpubar cpu4 4,90}
${cpubar cpu5 4,90} ${cpubar cpu6 4,90} ${cpubar cpu7 4,90} ${cpubar cpu8 4,90}
${color #4e7aa7}Processes:${color #DCDCDC} $processes  ${color #4e7aa7}Running:${color #DCDCDC} $running_processes
$hr
${color white}File systems:
 ${color #4e7aa7}/     ${color #DCDCDC}${fs_used /}/${fs_size /} ${fs_bar 6 /}
 ${color #4e7aa7}/home ${color #DCDCDC}${fs_used /home}/${fs_size /home} ${fs_bar 6 /root}
${color white}$hr
${color white}Networking:
${color #4e7aa7}Signal: ${color #DCDCDC}${wireless_link_qual wlp2s0}% ${goto 200}${color #4e7aa7}  SSID:${color white} ${wireless_essid wlp2s0}
${color #4e7aa7}Up:${color #DCDCDC} ${upspeed wlp2s0}  ${goto 200}${color #4e7aa7}  Down:${color white} ${downspeed wlp2s0}
$hr
Clock Killers:
${color #4e7aa7}Name                PID   CPU%   
${color #DCDCDC} ${top name 1} ${top pid 1} ${top cpu 1} 
${color #DCDCDC} ${top name 2} ${top pid 2} ${top cpu 2} 
${color #DCDCDC} ${top name 3} ${top pid 3} ${top cpu 3} 
${color #DCDCDC} ${top name 4} ${top pid 4} ${top cpu 4} 
${color white}$hr
${color white}Memory Hogs:
${color #4e7aa7}Name                PID   MEM%
${color #DCDCDC} ${top_mem name 1} ${top_mem pid 1} ${top_mem mem 1} 
${color #DCDCDC} ${top_mem name 2} ${top_mem pid 2} ${top_mem mem 2} 
${color #DCDCDC} ${top_mem name 3} ${top_mem pid 3} ${top_mem mem 3} 
${color #DCDCDC} ${top_mem name 4} ${top_mem pid 4} ${top_mem mem 4} 

]]
